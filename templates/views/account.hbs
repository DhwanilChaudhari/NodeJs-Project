<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      body { background-color: #f8f9fa; } .table-container { background: #fff;
      border-radius: 10px; padding: 20px; box-shadow: 0px 4px 6px rgba(0, 0, 0,
      0.1); } h1 { font-weight: 600; } .btn { border-radius: 5px; } .table img {
      border-radius: 5px; object-fit: cover; }
    </style>
  </head>
  <body>
    {{>header}}
    <div class="container py-5">
      <div class="row">
        <div class="col-10 mx-auto table-container">
          <h1 class="text-center text-primary mb-4">User Details</h1>
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Image</th>
                <th colspan="2" class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each data}}
                <tr>
                  <td>{{this.name}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.phone}}</td>
                  <td class="text-center">
                    <a
                      href="update?id={{this._id}}"
                      class="btn btn-primary btn-sm"
                    >
                      Update
                    </a>
                  </td>
                  <td class="text-center">
                    <a
                      href="delete?id={{this._id}}"
                      class="btn btn-danger btn-sm"
                    >
                      Delete
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
          <div class="d-flex justify-content-end">
            <a href="logoutAll" class="btn btn-danger me-2">Logout All</a>
            <a href="logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>